                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">

                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2">
                                <div class="col-7 text-right text-white">
                                    SubTotal
                                </div>
                                <div class="col-5">
                                    <span class="text-120 text-secondary-d1">Tk @Model.Tour?.Price X
                                        @Model.PassengerCount</span>
                                </div>
                            </div>

                            <div class="row my-2">
                                <div class="col-7 text-right text-white">
                                    Tax
                                </div>
                                <div class="col-5">
                                    <span class="text-110 text-secondary-d1">Tk 100</span>
                                </div>
                            </div>

                            <div class="row my-2 align-items-center bgc-primary-l3 p-2 payment-total">
                                <div class="col-7 text-right text-white">
                                    Total Amount
                                </div>
                                <div class="col-5">
                                    <span class="opacity-2 total-amount">Tk
                                        @Model.TotalAmount</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div>
                        <span class="text-secondary-d1 text-105">Thank you for booking with us! We look forward to
                            welcoming you onboard soon.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>