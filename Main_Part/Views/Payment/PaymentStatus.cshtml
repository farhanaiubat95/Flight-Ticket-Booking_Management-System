<div class="page-content container">
    <div class="page-header text-blue-d2">
        <h1 class="page-title text-secondary-d1">
            Invoice
        </h1>

        <div class="page-tools">
            <div class="action-buttons">
                <button class="btn bg-white btn-light mx-1px text-95 border" onclick="window.print()"><i
                        class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i> Print Receipt</button>
            </div>
        </div>
    </div>

    <div class="container px-0">
        <div class="row mt-4">
            <div class="col-12 col-lg-12">
                <div class="row">
                    <div class="col-12">
                        <div class="payment-flight-logo text-150">
                            <div class="flight-logo">
                                <img src="/tour/air-logo.png" alt="">
                                <span class="text-white">Airlines</span>
                            </div>
                            <div class="flight-text" style="color: #3cc7d2;">
                                <span>@ViewData["FlightFrom"]</span>
                                <span> To </span>
                                <span>@ViewData["FlightTo"]</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .row -->

                <hr class="row brc-default-l1 mx-n1 mb-4" />

                <div class="row">
                    <div class="col-sm-6">
                        <div>
                            <span class="text-sm text-grey-m2 align-middle"><span style="margin-right: 5px;"><i
                                        class="fa-solid fa-user"></i></span><span>Full Name : </span></span>
                            <span class="text-600 text-110 text-blue align-middle">@Model.BookUserNsme</span>
                        </div>
                        <div>
                            <span class="text-sm text-grey-m2 align-middle"><span style="margin-right: 5px;"><i
                                        class="fa-solid fa-envelope"></i></span><span>Email Address : </span></span>
                            <span class="text-600 text-110 text-blue align-middle"> @ViewData["userEmail"]</span>
                        </div>
                        <div>
                            <span class="text-sm text-grey-m2 align-middle"><span style="margin-right: 5px;"><i
                                        class="fa-solid fa-phone"></i></span><span>Phone Number : </span></span>
                            <span class="text-600 text-110 text-blue align-middle"> @ViewData["userPhoneNumber"]</span>
                        </div>

                    </div>
                    <!-- /.col -->

                    <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                        <hr class="d-sm-none" />
                        <div class="text-grey-m2">
                            <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                Invoice
                            </div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span
                                    class="text-600 text-90">Payment ID:</span> @Model.PaymentID</div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span
                                    class="text-600 text-90">Payment Date:</span> @Model.BookingDate</div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span
                                    class="text-600 text-90">Status:</span>
                                @if (@Model.PaymentStatus == "Unpaid")
                                {
                                    <span class="badge bg-warning badge-pill px-25">@Model.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-pill px-25">@Model.PaymentStatus</span>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>

                <div class="mt-4">
                    <div class="row text-600 text-white text-center bgc-default-tp1 py-25">
                        <div class="d-none d-sm-block col">Flight To</div>
                        <div class="d-none d-sm-block col">Departure</div>
                        <div class="d-none d-sm-block col">Arrived</div>
                        <div class="d-none d-sm-block col">Ticket No</div>
                        <div class="d-none d-sm-block col">Transaction No</div>
                        <div class="d-none d-sm-block col">Total Passenger</div>
                        <div class="d-none d-sm-block col">Amount</div>

                        @* <div class="col col-sm-5">Departure</div>
                        <div class="d-none d-sm-block col col-sm-2">Arrived</div>
                        <div class="d-none d-sm-block col-sm-2">Ticket No</div>
                        <div class="d-none d-sm-block col-sm-2">Transaction no</div>
                        <div class="col">Amount</div> *@
                    </div>

                    <div class="text-95 text-white  text-secondary-d3 border-bottom">
                        <div class="row mb-2 mb-sm-0 py-25 text-center">
                            <div class="d-none d-sm-block col">@Model.Tour?.FlightTo</div>
                            <div class="d-none d-sm-block col">@Model.Tour?.DepartureDate</div>
                            <div class="d-none d-sm-block col">@Model.Tour?.ArrivalDate</div>
                            <div class="d-none d-sm-block col">@Model.TicketNumber</div>
                            <div class="d-none d-sm-block col">@Model.TransactionId</div>
                            <div class="d-none d-sm-block col">@Model.PassengerCount</div>
                            <div class="d-none d-sm-block col">@Model.Tour?.Price</div>

                            @* <div class="col col-sm-5">@Model.Tour?.DepartureDate</div>
                            <div class="d-none d-sm-block col-2">@Model.Tour?.ArrivalDate</div>
                            <div class="d-none d-sm-block col-2 text-95">@Model.TicketNumber</div>
                            <div class="d-none d-sm-block col-2 text-95">@Model.TransactionId</div>
                            <div class="col text-secondary-d2">@Model.Tour?.Price</div> *@
                        </div>
                    </div>

                    <div class="row border-b-2 brc-default-l2"></div>

