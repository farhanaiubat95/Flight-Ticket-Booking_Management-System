@model IEnumerable<Tours>

<div class="inventory-body">
    <h2 class="text-center text-white mb-2">Find Your Best Deals</h2>

    <div class="row mb-5">
        <div class="col">
        </div>
        <div class="col">

        </div>
    </div>

    <table class="table table-bordered my-5" id="toursTable">
        <thead>
            <tr class="text-center text-white ">
                <th>Id</th>
                <th>FlightFrom</th>
                <th>FlightTo</th>
                <th>DepartureDate</th>
                <th>ArrivalDate</th>
                <th>Price</th>
                <th>Available Seats</th>
                <th>Photo</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var tour in Model)
            {
                <tr class="text-center text-white ">
                    <td>@tour.Id</td>
                    <td>@tour.FlightFrom</td>
                    <td>@tour.FlightTo</td>
                    <td>@tour.DepartureDate</td>
                    <td>@tour.ArrivalDate</td>
                    <td>Tk@(tour.Price)</td>
                    <td>@tour.Maxperson</td>
                    @* tour.photo *@
                    <td><img src="/tourAddImage/@tour.Photo" width="100" height="100" /></td>
                    <td>
                        <div class="d-flex gap-3">
                            <a href="@Url.Action("BookNow", "Tour", new { id = tour.Id })" class="btn btn-primary">Book
                                Now</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>